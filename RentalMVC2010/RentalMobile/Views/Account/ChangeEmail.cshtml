@model RentalMobile.Models.ChangeEmail

@{
    ViewBag.Title = "Change Email";
    Layout = "~/Views/Shared/_ConceptLayoutPage.cshtml";
}

<h2>ChangeEmail</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
        @Html.ValidationSummary(true, "Email address was not changed was unsuccessful. Please correct the errors and try again.")
    <fieldset>
        <legend>RegisterModel</legend>

        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <p>
            <input type="submit" value="Change Email" />
        </p>
    </fieldset>
}

