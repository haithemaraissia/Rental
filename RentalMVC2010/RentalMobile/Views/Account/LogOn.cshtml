@model RentalMobile.Models.LogOnModel
@{
    ViewBag.Title = "Log On";
    Layout = "~/Views/Shared/_ConceptLayoutPage.cshtml";
}
<!-- Section: search form -->
<section class="nine columns add-bottom relative">
    <h2>
        Log On</h2>
    <p>
        Please enter your user name and password. @Html.ActionLink("Register", "Register")
        if you don't have an account.
    </p>
    @Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.")
    @using (Html.BeginForm())
    {
 
        <fieldset>
            <legend>Account Information</legend>
            <label>
                <span class="entypo"><i class="icon-user"></i></span>
                <input type="text" class="inline remove-bottom" placeholder="USER" />
            </label>
            <label>
                <span class="entypo"><i class="icon-user"></i></span>
                @Html.TextBoxFor(m => m.UserName, new { required = "required", placeHolder = "User Name" })
                @Html.ValidationMessageFor(m => m.UserName)
            </label>
            <br>
            <span class="entypo"><i class="icon-lock"></i></span>
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { required = "required", CssClassPropertyAttribute = "inline remove-bottom", placeholder = "Password" })
            @Html.ValidationMessageFor(m => m.Password)
            <br>
            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "centered" })
            @Html.LabelFor(m => m.RememberMe)
            <br>
            <div class="">
                <select id="Role" class="custom-select" title="Role">
                    <option selected="true" value="Tenant">Tenant</option>
                    <option value="LandLoard">LandLord</option>
                </select>
            </div>
            <br>
            <input type="submit" class="submit" value="Log On" />
        </fieldset>
   
    }
    <div id="login" class="dropdown dropdown-tip dropdown-anchor-right">
        <div class="dropdown-panel">
            <img src="../../images/dotimages/logo-small.png" alt="//" />
            <form action="#" class="remove-bottom login-form">
            <label>
                <span class="entypo"><i class="icon-user"></i></span>
                <input type="text" class="inline remove-bottom" placeholder="USER">
                 @Html.PasswordFor(m => m.Password, new { required = "required", CssClassPropertyAttribute = "inline remove-bottom", placeholder = "Password" })

            </label>
            <label class="half-bottom">
                <span class="entypo"><i class="icon-lock"></i></span>
                <input type="password" class="inline remove-bottom" placeholder="PASSWORD">
            </label>
                <input type="submit" value="Log in" class="remove-bottom full-width">
  
                <!--MORE WORK ON THIS -->
                	<div class="">

						<select id="Role" class="custom-select" title="Role">
							<option value="Tenant">Tenant</option>
							<option value="LandLoard">LandLord</option>
						</select>

					</div>
                <hr />
            <label class="checkbox pull-left">
                <div  style="float: left" id="uniform-remember">
                    <span> <input type="checkbox" class="checkbox" id="remember" style="opacity: 0;"> Remember me</span></div>
            </label>
            <a data-toggle="tab" style="float: right" href="#forgot">Forgot Password?</a>
            </form>
            <!-- Addition for the Profile-->
            <a href="../Tenant">Tenant</a>
            <!--MORE WORK ON THIS -->
            
            
            

        </div>
    </div>
</section>
<!-- /section: search form -->
<!-- Aside -->
<aside class="seven columns">
    <h2>
        Login with Social Buttons</h2>
    <div class="boxed shadded wide-on-small-screen">
        <ul class="grid-form row remove-bottom">
            <li class="six columns"><a class="twitter-registration" href="#">Sign up with your Twitter
                account</a> </li>
            <li class="six columns"><a class="facebook-registration" href="#">Sign up with your
                Facebook account</a> </li>
            <li class="six columns"><a class="google-registration" href="#">Sign up with your Google
                account</a> </li>
        </ul>
    </div>
</aside>
<!-- /aside -->
@section scripts
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
